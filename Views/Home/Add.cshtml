@model Dish;

<a href="/">Home</a>
<h1 class="display-5 text-center mb-5">Add a new Dish!</h1>
<hr class="mb-4">
<form action="/add/dish" method="post">
    <div style="min-height: 300px" class="d-flex justify-content-around align-items-start">
        <div class="flex-1">
            <div class="form-group">
                <label for="Chef" class="mb-1">Chef's Name</label>
                <input asp-for="Chef" class="form-control">
                <small class="text-danger"><span asp-validation-for="Chef"></span></small>
            </div>
            <div class="form-group">
                <label for="Name" class="mt-4 mb-1">Name of Dish</label>
                <input asp-for="Name" class="form-control">
                <small class="text-danger"><span asp-validation-for="Name"></span></small>
            </div>
            <div class="form-group">
                <label for="Calories" class="mt-4 mb-1"># of Calories</label>
                <input asp-for="Calories" class="form-control">
                <small class="text-danger"><span asp-validation-for="Calories"></span></small>
            </div>
        </div>
        <div class="flex-1 form-group">
            <label for="Tastiness" class="mb-1">Tastiness</label>
            <select asp-for="Tastiness" class="form-control">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <small class="text-danger"><span asp-validation-for="Tastiness"></span></small>
        </div>
        <div class="flex-1 form-group">
            <div class="d-flex flex-column">
                <label for="Description" class="mb-1">Description</label>
                <textarea asp-for="Description" cols="30" rows="10" class="form-control"></textarea>
                <div class="d-flex justify-content-start my-5">
                    <input type="submit" value="Add Dish" class="btn btn-primary">
                </div>
            </div>
        </div>
    </div>
</form>